{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput --settings=ankavidange.settings_production"
  },
  "deploy": {
    "startCommand": "python manage.py migrate --settings=ankavidange.settings_production && gunicorn --bind 0.0.0.0:$PORT ankavidange.wsgi:application --settings=ankavidange.settings_production",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
